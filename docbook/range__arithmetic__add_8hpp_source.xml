<anchor xml:id="_range__arithmetic__add_8hpp_source_1l00012"/>00012 &#32;&#32;&#32;&#32;<emphasis role="keywordflow">for</emphasis>(<emphasis role="keyword">auto</emphasis>&#32;[l,r,start,step]:query)&#32;{
<anchor xml:id="_range__arithmetic__add_8hpp_source_1l00013"/>00013 &#32;&#32;&#32;&#32;&#32;&#32;&#32;&#32;i1[l+1]+=step;&#32;i1[r]-=step;
<anchor xml:id="_range__arithmetic__add_8hpp_source_1l00014"/>00014 &#32;&#32;&#32;&#32;&#32;&#32;&#32;&#32;i1[r]-=step*(r-l-1);&#32;i1[r+1]+=step*(r-l-1);
<anchor xml:id="_range__arithmetic__add_8hpp_source_1l00015"/>00015 &#32;&#32;&#32;&#32;&#32;&#32;&#32;&#32;i2[l]+=start;&#32;i2[r]-=start;
<anchor xml:id="_range__arithmetic__add_8hpp_source_1l00016"/>00016 &#32;&#32;&#32;&#32;}
